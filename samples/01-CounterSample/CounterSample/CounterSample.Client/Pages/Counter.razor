@page "/counter"
@inherits Blazor.Fluxor.Components.FluxorComponent
@using Blazor.Fluxor
@using Store.Counter
@inject IDispatcher Dispatcher
@inject IState<CounterState> CounterState

<h1>Counter</h1>

<p>This page <strong>has</strong> been Fluxorized</p>

<p>Current count: @CounterState.Value.ClickCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Increment</button>
<button class="btn btn-secondary" @onclick="DecrementCount">Decrement</button>
<button class="btn btn-danger" @onclick="ResetCounter">Reset Counter</button>

@code {
	void IncrementCount()
	{
		Dispatcher.Dispatch(new IncrementCountAction());
	}

        void DecrementCount()
    {
        Dispatcher.Dispatch(new DecrementCountAction());
    }

        void ResetCounter()
    {
        Dispatcher.Dispatch(new ResetCounterAction());
    }
}
